package com.ahut.chap08;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class TextEditor {
	JFrame frame;
	JPanel panel;
	JLabel lableOne;
	JButton buttonOne;
	public TextEditor()
	{
		panel=new JPanel();
		lableOne=new JLabel("这是一个标签");
		lableOne.setSize(260, 90);
		buttonOne=new JButton("确定");
		panel.add(lableOne);
		panel.add(buttonOne);
		frame=new JFrame("事件处理实例");
		frame.setSize(520, 300);
		frame.setLocation(700, 200);
		frame.add(panel);
		
		//在按钮组件上添加监听器类的实例的注册
		buttonOne.addActionListener(new MyListener());
		
		frame.setVisible(true);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
	
	public class MyListener implements ActionListener{//编写监听类(内部类)
		public void actionPerformed(ActionEvent e)
		{
			lableOne.setText("天天好心情");
		}
	}

	public static void main(String[] args) {
		new TextEditor();
	}
}
